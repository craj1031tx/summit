<h1>Your past takeouts</h1>

{{#if takeouts}}
    {{#each takeouts as |oneTakeout|}}
    <h2>Takeout code: {{oneTakeout.token}}</h2>
    <table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Content Type</th>
            <th scope="col">privLevel</th>
            <th scope="col">Download</th>
        </tr>
    </thead>
    <tbody>
        {{#each oneTakeout.assets}}  
        <tr>
            <td>{{name}}</td>
            <td>{{contentType}}</td>
            <td>{{privLevel}}</td>
            <td>
                <a class="btn btn-success" href="/uploads/{{assetMulterName}}" download="{{assetOriginalName}}">Download</a>
            </td>    
        </tr>
        {{/each}}
    </tbody>
    </table>
    {{/each}}


{{else}}
<h1>You haven't created any takeouts</h1>
{{/if}}

